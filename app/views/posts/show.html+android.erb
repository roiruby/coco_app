      <div class="flex-center">
        
        <% dt1 = Time.zone.now %>
        <% dt2 = Time.zone.parse(@post.dead_line.to_s) %>
        <% diff = dt2 - dt1 %>
        <% s = diff % 60 %>
        <% m = ((diff - s) / 60) % 60 %>
        <% h = ((diff - s - m * 60) / (60 ** 2)) % 24 %>
        <% d = ((diff - s - m * 60 - h * 60 ** 2) / (60**2 * 24)) %>
        
        <% if d.to_i < 0 or @post.draft? %>

