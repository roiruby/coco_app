              <% m = ((diff - s) / 60) % 60 %>
              <% h = ((diff - s - m * 60) / (60 ** 2)) % 24 %>
              <% d = ((diff - s - m * 60 - h * 60 ** 2) / (60**2 * 24)) %>
              
