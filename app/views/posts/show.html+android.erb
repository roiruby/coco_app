          <% if @post.payment != "default" %>
          <div class="btn1 small bold ml-1">
            <%= @post.payment_i18n %>
          </div>
          <% end %>
          
          <% if @post.budget != "default" %>
          <div class="btn1 small bold ml-1">
            <%= @post.budget_i18n %>
          </div>
          <% end %>
          
          
        </div>


      </div>
      
      <div class="m-2 poscon">
        <%= simple_format(@post.content) %>
      </div>
      
      
      <% if @post.cancel.present? %>
        <div class="text-center mt-3 bold text-primary">
          このイベントはキャンセルされました
        </div>
