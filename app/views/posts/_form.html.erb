<%= form_with(model: @post, local: true) do |f| %>

  <div class="plan-submit-row sticky-top">
    <div class="container plan-submit">

      <div class="pt-1">
        <h4>プラン作成</h4>
      </div>

        <div class="web-flex">

          <div>
            <%= f.submit '投稿する', class: 'btn btn-primary btn-sm' %>
          </div>
        </div>
      
    </div>
  </div>



<div class="container">

  <div class="form-group mt-3">
    <span class="required">*</span>
    <%= f.label :title, 'スケジュールタイトル' %>
    <%= f.text_field :title, placeholder: 'スケジュールのタイトルを入力 （55文字以内）', class: 'form-control border-warning' %>
  </div>
  
  <div class="row row-0">  


    <div class="form-group col-lg-9 col-sm-8">
      <%= f.label :content, 'スケジュールの説明' %>
      <%= f.text_area :content, :size => "80x5", placeholder: 'スケジュールのサブタイトルや説明を入力 （7000文字以内）', class: 'form-control border-warning'  %>
    </div>
    
  </div>


  <div class="form-row">
    


    
  </div>



    <hr>
    


  <% end %>

</div>
