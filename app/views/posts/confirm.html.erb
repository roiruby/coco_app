<div class="container-fluid">
  <div class="row mt-4">
    
    <div class="col-lg-3 col-sm-4 text-center">
      <%= render 'mypage/mypage_left' %>
    </div>
    
    <div class="col-lg-6 col-sm-8">
      <h2>下書きプラン一覧 　<span class="small bold"><%= @count_draft %> プラン</span></h2>
      
      <div class="mypage-center top-planimage mt-3">
      <% @posts.each do |post| %>
      <div class="row row-0">
        <div class="top-postimage col-sm-4 mt-2">
          <%= link_to image_tag(post.image.thmb300.to_s), post_path(post), data: {"turbolinks" => false} %>
        </div>
        <div class="col-sm-8 bold pl-2 mt-2">
          <%= link_to post.title.truncate(46), post_path(post), data: {"turbolinks" => false} %>
          <div class="small mt-1"><%= post.content.truncate(62) %></div>
          
          <div class="tag1 xsmall bold mt-2">
            <%= link_to post.category.name, category_path(post.category.id) %>
          </div>
          
          <% post.destinations.each do |destination| %>
            <% if destination.area.present? %>
              <div class="tag1 xsmall bold mt-1">
                <%= destination.area %>
              </div>
            <% end %>
          <% end %>
          

          
          <div class="mt-2 small web-gray text-right">
            <i class="far fa-clock"></i><%= post.updated_at.strftime('%Y/%m/%d') %>
          </div>
        </div>
      </div>  
      <% end %>
      </div>
      
      <div class="pagination justify-content-end pagination-sm">
        <%= paginate @posts %>
      </div>
    </div>
    
    <div class="col-lg-3 d-none d-lg-block">

    </div>
    
  </div>
</div>